extends layout

block content
    include nav
    section#contact-main.home-main.ultimate-main.room-detail-main
        div
            .ultimate-header THE ULTIMATE LUXURY
            .home-main-text.ultimate-main-text Our Offers
        .contact-navigator-container
            #home-tag-contact.contact-navigator-tag Home
            #about-tag-contact.contact-navigator-tag Offers
    section.room-list-section.room-offers-section
        section.room-list-section.room-offers-section
            each room in rooms
                .room-list-card.room-offers-card
                    a.room-list-image.room-offers-image(href='./single-room/' + room.id)
                        img.room-list-image.room-offers-image(src=room.photo[Math.floor(Math.random() * (1 - 0 + 1) ) + 1])
                    .icons-and-info
                        .list-room-icon-bar
                            i.fa.fa-bed.room-icon-bar-icon(aria-hidden='true')
                            i.fa.fa-wifi.room-icon-bar-icon(aria-hidden='true')
                            i.fa.fa-car.room-icon-bar-icon(aria-hidden='true')
                            i.fa.fa-coffee(aria-hidden='true')
                            i.fa.fa-cutlery(aria-hidden='true')
                            i.fa.fa-diamond(aria-hidden='true')
                            i.fa.fa-asterisk(aria-hidden='true')
                        .room-list-card-content.room-offers-card-content
                            .room-list-card-information.room-offers-card-information
                                .section-header
                                a(href='./single-room/' + room.id)
                                    .room-list-card-title='Room Number ' + room.roomNumber + ' - ' + room.roomType
                                p.room-list-card-text=room.description
                                button.room-offer-book-button BOOK NOW
                            .room-list-card-booking
                                .room-list-card-price
                                    .room-list-price-number.old-price='$' + room.price/100
                                    .room-list-price-night /Night
                                .room-list-card-price
                                    .room-list-price-number.offer='$' + room.offer_price/100
                                    .room-list-price-night.offer /Night
                                a(href='./single-room/' + room.id)
                                    .room-list-card-booking-text Booking Now
                                ul.room-offers-benefits-list
                                    li.room-offers-benefit Air conditioner
                                    li.room-offers-benefit Air conditioner
                                    li.room-offers-benefit Air conditioner
                                    li.room-offers-benefit Air conditioner
                                    li.room-offers-benefit Air conditioner
    section.popular-rooms-section
        .section-header POPULAR LIST
        .section-body Popular Rooms
        .popular-rooms-container
            .related-room-card
                #image-1.related-room-image
                    .room-icon-bar
                        i.fa.fa-bed.room-icon-bar-icon(aria-hidden='true')
                        i.fa.fa-wifi.room-icon-bar-icon(aria-hidden='true')
                        i.fa.fa-car.room-icon-bar-icon(aria-hidden='true')
                        i.fa.fa-coffee(aria-hidden='true')
                        i.fa.fa-cutlery(aria-hidden='true')
                        i.fa.fa-diamond(aria-hidden='true')
                        i.fa.fa-asterisk(aria-hidden='true')
                .room-list-card-content
                    .room-list-card-information
                        .room-list-card-title Minimal Duplex Room
                        p.room-list-card-text
                            | Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do
                            | eiusmod tempor.
                    .room-list-card-booking
                        .room-list-card-price
                            .room-list-price-number $345
                            .room-list-price-night /Night
                        .room-list-card-booking-text Booking Now
    section.subscribe-section
        .hotel-miranda-title
            .hotel-miranda-icon H
            div
                .hotel-bold HOTEL
                div MIRANDA
        p.subscribe-text
            | Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed doing
            | eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad
            | minim veniam, quis nostrud exercitation ullamco laboris nisi.
        .subscribe-form
            input.subscribe-input(placeholder='ENTER YOUR EMAIL ADDRESS')
            button.subscribe-button SUBSCRIBE
    include footer
    script(src='/javascripts/vendor/modernizr-3.11.2.min.js')
    script(src='/javascripts/plugins.js')
    script(src='/javascripts/main.js')
    script(src='/javascripts/main.js')
