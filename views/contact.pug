extends layout

block content
    header.header
        .header-bar
            .hotel-miranda-title
                .hotel-miranda-icon H
                div
                    a.link(href='./index.html')
                        .hotel-bold HOTEL
                        div MIRANDA
            i#hamburger-button.fa.fa-bars.hamburger-button(aria-hidden='true')
        #drop-down-box.drop-down-box
            ul.drop-down-list
                li.drop-down-element
                    a.link(href='./about-us.html')  About Us 
                .space
                li.drop-down-element
                    a.link(href='./room-list.html')  Rooms
                .space
                li.drop-down-element
                    a.link(href='./room-offers.html')  Offers 
                .space
                li.drop-down-element
                    a.link(href='./single-room.html')
                        | News
                .space
                li.drop-down-element
                    a.link(href='./contact.html')  Contact
            .contact-and-icon-container
                .contact-and-icon
                    div
                        .contact-text Phone Number
                        #phone-number.drop-down-contact
                            | +622 37 37 22
                    i.fa.fa-phone.drop-down-icon(aria-hidden='true')
                .contact-and-icon
                    div
                        .contact-text Email Address
                        #contact-mail.drop-down-contact
                            | marinarsanisidro@gmail.com
                    i.fa.fa-envelope.drop-down-icon(aria-hidden='true')
    section#contact-main.home-main.ultimate-main
        div
            .ultimate-header THE ULTIMATE LUXURY
            .home-main-text.ultimate-main-text Contact Us
        .contact-navigator-container
            #home-tag-contact.contact-navigator-tag Home
            #about-tag-contact.contact-navigator-tag Contact
    .inverted-container
        section.contact-form-section
            .contact-form-container
                input.contact-form-input.full-name(type='text' placeholder='Your full name')
                input.contact-form-input.mail-address(type='text' placeholder='Enter email address')
                input.contact-form-input.add-phone(type='text' placeholder='Add phone number')
                select.contact-form-input.select-subject
                    option(disabled='' selected='') Select Subject
                textarea.contact-form-input.enter-message(placeholder='Enter messages')
            .center
                button.wide-golden-button GET FREE QUOTE
        div
            section.contact-information-section
                .contact-information-card
                    i.fa.fa-home.contact-information-icon(aria-hidden='true')
                    .contact-information-text
                        .contact-information-text-title Office Address
                        .contact-information-text-description
                            | 19/A, Cirikon City hall Tower New York, NYC
                    .contact-information-count 01
                .contact-information-card
                    i.fa.fa-phone.contact-information-icon(aria-hidden='true')
                    .contact-information-text
                        .contact-information-text-title Phone Number
                        .contact-information-text-description
                            div +97656-8675-7864-7
                            div +876-766-8675-765-6
                    .contact-information-count 02
                .contact-information-card
                    i.fa.fa-envelope-open.contact-information-icon(aria-hidden='true')
                    .contact-information-text
                        .contact-information-text-title Email Address
                        .contact-information-text-description
                            | info@webmail.com jobs.webmail@mail.com
                    .contact-information-count 03
            section.flex
                section#map.satelite-map
                .column
                    select#dropdown.community-dropdown
                        option(selected='' value='-1') Select Community
                        option(value='0') Andalucía
                        option(value='1') Aragón
                        option(value='2') Asturias, Principado de
                        option(value='3') Balears, Illes
                        option(value='4') Canarias
                        option(value='5') Cantabria
                        option(value='6') Castilla y León
                        option(value='7') Castilla - La Mancha
                        option(value='8') Cataluña / Catalunya
                        option(value='9') Comunitat Valenciana
                        option(value='10') Extremadura
                        option(value='11') Galicia
                        option(value='12') Madrid, Comunidad de
                        option(value='13') Murcia, Región de
                        option(value='14') Navarra, Comunidad Foral de
                        option(value='15') País Vasco / Euskadi
                        option(value='16') Rioja, La
                        option(value='17') Ceuta
                        option(value='18') Melilla
                    button#find-near-location.community-dropdown
                        | Find my nearest location
                    input#geolocation-input.geolocation-input(type='text' placeholder='Enter a location')
                    .geocode-buttons
                        button#search-location-button.community-dropdown.search-loc(value='Search') Search
                        button#clear-location-button.community-dropdown.search-loc(value='Clear') Clear
                    #sidebar(style='display: none')
                        h3(style='flex-grow: 0')
                            | Closest Miranda Hotel to my location.
                        #response
    section.subscribe-section
        .hotel-miranda-title
            .hotel-miranda-icon H
            div
                .hotel-bold HOTEL
                div MIRANDA
        p.subscribe-text
            | Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed doing
            | eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad
            | minim veniam, quis nostrud exercitation ullamco laboris nisi.
        .subscribe-form
            input.subscribe-input(placeholder='ENTER YOUR EMAIL ADDRESS')
            button.subscribe-button SUBSCRIBE
    footer
        .copyright COPYRIGHT BY@EXAMPLE
        .logo-line
            i.fa.fa-facebook.copy-icon(aria-hidden='true')
            i#twitter.fa.fa-twitter.copy-icon(aria-hidden='true')
            i.fa.fa-behance.copy-icon(aria-hidden='true')
            i.fa.fa-linkedin-square.copy-icon(aria-hidden='true')
            i.fa.fa-youtube-play.copy-icon(aria-hidden='true')
    script(src='js/vendor/modernizr-3.11.2.min.js')
    script(src='js/plugins.js')
    script(src='js/main.js')
    script(src='js/map.js')
    script(async='' defer='' src='https://maps.googleapis.com/maps/api/js?key=AIzaSyDDUM_cAYGbY7wKsruKQhRkWmXzrZFPc-k&callback=initMap')